<!DOCTYPE html>
<!--[if IE 8]> 				 <html class="no-js lt-ie9" lang="en" > <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en" > <!--<![endif]-->

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Profile</title>

  <link rel='stylesheet' href="/stylesheets/normalize.css" />
  
  <link rel="stylesheet" href="/stylesheets/foundation.css" />
  

  <script src="/javascript/vendor/custom.modernizr.js"></script>

</head>
<body>

	<div class="row">
		<div class="large-12 columns">
			<h2>Welcome </h2>			
			<hr />
	
			<div class="row">
  <div class="large-6 columns">
   <form action="/profile" method="POST">
    <fieldset>
     <legend>Register</legend>

     <div class="row">
    
      <div class="large-12 columns">
       <div class="row collapse">
        <div class="small-3 columns">
         <span class="prefix radius">Email</span>
        </div>
        <div class="small-9 columns">
         <input type="text" name="email" placeholder="Your email here" value="<%= user.email%>" disabled>
        </div>
       </div>
      </div>
    
	  <div class="large-12 columns">
       <div class="row collapse">
        <div class="small-3 columns">
         <span class="prefix radius">Username</span>
        </div>
        <div class="small-9 columns">
         <input name="username" type="text" placeholder="Username" value="<%= user.username %>">
        </div>
       </div>
      </div><div class="large-12 columns">
       <div class="row collapse">
        <div class="small-3 columns">
         <span class="prefix radius">First Name</span>
        </div>
        <div class="small-9 columns">
         <input name="firstname" type="text" placeholder="First Name" value="<%= user.firstname %>">
        </div>
       </div>
      </div><div class="large-12 columns">
       <div class="row collapse">
        <div class="small-3 columns">
         <span class="prefix radius">Last Name</span>
        </div>
        <div class="small-9 columns">
         <input name="lastname" type="text" placeholder="Last Name" value="<%= user.lastname %>">
        </div>
       </div>
      </div>
    
	<div class="large-12 columns">
       <div class="row collapse">
          <input type="submit" class="small button" value="Update" >
       </div>
      </div>
    
     </div>
     
    </fieldset>
   </form>
  </div>
 </div>
  
  
  <script>
    $(document).foundation();
  </script>
</body>
</html>
