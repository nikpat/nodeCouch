<body>

	<div class="row">
		<div class="large-12 columns">
			<h2>Welcome to SimpleCMS</h2>
			<p>This is version 4.1.2.</p>
			<hr />
		</div>
	</div>

	<div class="row">
		<div class="large-6 columns" style="border-right: 1px solid #dddddd">
			<form action="/reset" method="POST" >
				<fieldset>
					<legend>Login form</legend>

					<div class="row">
				
						<div class="large-12 columns">
							<div class="row collapse">
								<div class="small-3 columns">
									<span class="prefix radius">Password</span>
								</div>
								<div class="small-9 columns">
									<input type="password" name="password" placeholder="Your Password here" required>
								</div>
								
							</div>
						</div>
				
						<div class="large-12 columns">
							<div class="row collapse">
								<div class="small-3 columns">
									<span class="prefix radius">Confirm Password</span>
								</div>
								<div class="small-9 columns">
									<input type="password" name="cpassword" placeholder="Your password Confirm" required>
								</div>
							</div>
						</div>
						
						<div class="large-12 columns">
							<div class="row collapse">
								<input type="submit" class="small button" value="Login">
							</div>
						</div>
				
					</div>
					
				</fieldset>
			</form>			
		</div>
	</div>

